rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Public read-only players catalog
    match /players/{playerId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.token.admin == true;
    }

    // User-scoped data
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;

      // User secrets (OAuth tokens)
      match /secrets/{docId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
      
      // Example nested collections
      match /leagues/{leagueId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
      match /settings/{docId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }

    // DriveMind scan jobs - users can read/write their own scan jobs
    match /scanJobs/{jobId} {
      allow read, write: if request.auth != null && resource.data.uid == request.auth.uid;
      allow create: if request.auth != null && request.resource.data.uid == request.auth.uid;
    }

    // DriveMind file index - users can read/write their own file index entries  
    match /fileIndex/{indexId} {
      allow read, write: if request.auth != null && resource.data.uid == request.auth.uid;
      allow create: if request.auth != null && request.resource.data.uid == request.auth.uid;
    }

    // DriveMind scan deltas - users can read/write their own deltas
    match /scanDeltas/{deltaId} {
      allow read, write: if request.auth != null && resource.data.uid == request.auth.uid;
      allow create: if request.auth != null && request.resource.data.uid == request.auth.uid;
    }

    // DriveMind action batches and other collections
    match /actionBatches/{batchId} {
      allow read, write: if request.auth != null && resource.data.uid == request.auth.uid;
      allow create: if request.auth != null && request.resource.data.uid == request.auth.uid;
    }

    // Default deny
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
