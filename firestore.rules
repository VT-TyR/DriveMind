rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    

    // User-scoped data
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;

      // User secrets (OAuth tokens)
      match /secrets/{docId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
      
      // Example nested collections
      match /leagues/{leagueId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
      match /settings/{docId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }

    // DriveMind scan jobs - users can read/write their own scan jobs
    match /scanJobs/{jobId} {
      allow read: if request.auth != null && 
        (resource.data.uid == request.auth.uid || 
         resource.data.uid == request.auth.token.uid);
      allow create: if request.auth != null && 
        request.resource.data.uid == request.auth.uid;
      allow update: if request.auth != null && 
        resource.data.uid == request.auth.uid;
      allow delete: if false; // Prevent accidental deletion
    }

    // DriveMind scan checkpoints - system managed
    match /scanCheckpoints/{checkpointId} {
      allow read: if request.auth != null && 
        resource.data.uid == request.auth.uid;
      allow write: if false; // Only Cloud Functions can write
    }
    
    // DriveMind job chains - system managed
    match /jobChains/{chainId} {
      allow read: if request.auth != null && 
        resource.data.uid == request.auth.uid;
      allow write: if false; // Only Cloud Functions can write
    }

    // DriveMind file index - users can read their own file index entries  
    match /fileIndex/{indexId} {
      allow read: if request.auth != null && 
        resource.data.uid == request.auth.uid;
      allow write: if false; // Only Cloud Functions can write for data integrity
      allow create: if false; // Only Cloud Functions can create
    }

    // DriveMind scan deltas - users can read their own deltas
    match /scanDeltas/{deltaId} {
      allow read: if request.auth != null && 
        resource.data.uid == request.auth.uid;
      allow write: if false; // Only Cloud Functions can write for data integrity
      allow create: if false; // Only Cloud Functions can create
    }

    // DriveMind action batches and other collections
    match /actionBatches/{batchId} {
      allow read, write: if request.auth != null && resource.data.uid == request.auth.uid;
      allow create: if request.auth != null && request.resource.data.uid == request.auth.uid;
    }

    // Default deny
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
