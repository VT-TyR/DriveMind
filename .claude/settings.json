{
  "model": "sonnet",
  "permissions": {
    "allow": [
      "Read(**)",
      "Grep(**)",
      "Glob(**)",
      "Bash(npm run test:*)",
      "Bash(git:*)"
    ],
    "ask": [
      "Write(**)",
      "Edit(**)",
      "MultiEdit(**)",
      "WebFetch",
      "WebSearch"
    ],
    "deny": [
      "Read(./.env)",
      "Read(./.env.*)",
      "Read(./secrets/**)",
      "Bash(rm -rf:*)"
    ]
  },
  "hooks": {
    "PostToolUse": {
      "Edit": "npm run test:unit || true"
    }
  }
}